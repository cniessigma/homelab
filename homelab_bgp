router bgp 65023
  bgp router-id 192.168.128.1
  timers bgp 3 9
  no bgp ebgp-requires-policy
  no bgp default ipv4-unicast
  no bgp network import-check
  !
  ! homelab with bgp id 65024
  neighbor homelab peer-group
  neighbor homelab remote-as 65024
  neighbor homelab soft-reconfiguration inbound
  ! These are agressive timers, you might want to double those values
  neighbor homelab timers 2 6
  neighbor homelab timers connect 5
  ! Each kubernetes node in my cluster is going to act as a neighbor
  neighbor 192.168.128.2 peer-group homelab
  neighbor 192.168.128.3 peer-group homelab
  neighbor 192.168.128.4 peer-group homelab
  neighbor 192.168.128.5 peer-group homelab
  !
  address-family ipv4 unicast
    neighbor homelab next-hop-self
    neighbor homelab activate
    neighbor homelab route-map ALLOW-ALL in
    neighbor homelab route-map ALLOW-ALL out
    network 192.168.128.0/17
  exit-address-family